{
  "name": "COBOX",
  "displayName": "Cobox Launcher",
  "version": "6.0.0",
  "description": "A modern game launcher for Cobox games",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:frontend": "cd frontend && next dev",
    "dev:electron": "npm run build:backend && electron . --dev",
    "prebuild": "rimraf out && rimraf dist && rimraf frontend/.next && rimraf frontend/out",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "next build frontend && copyfiles -u 1 \"frontend/public/**/*\" frontend/out/",
    "build:backend": "tsc -p backend",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && npx electron-builder",
    "dist:win": "npm run build && npx electron-builder --win",
    "dist:mac": "npm run build && npx electron-builder --mac",
    "dist:linux": "npm run build && npx electron-builder --linux",
    "update:readme": "tsx scripts/update-readme.js"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.1",
    "electron-serve": "^2.1.1",
    "electron-updater": "^6.6.2",
    "extract-zip": "^2.0.1",
    "lucide-react": "^0.485.0",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.5",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.8",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "electron": "^34.5.8",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "next": "^15.1.7",
    "postcss": "^8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.8",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "build": {
    "productName": "cobox",
    "appId": "com.cobox.coboxlauncher",
    "electronVersion": "34.2.0",
    "asar": true,
    "compression": "normal",
    "extraMetadata": {
      "main": "dist/index.js"
    },
    "files": [
      "dist",
      "frontend/out"
    ],
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Cobox-no-code",
        "repo": "CoboxLauncher"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./public/icon.png",
      "artifactName": "${name}-${version}-windows-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "${name}-${version}-windows-${arch}-nsis-installer.${ext}",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./public/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  }
}
